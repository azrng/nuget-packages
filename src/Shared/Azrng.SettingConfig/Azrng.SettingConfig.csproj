<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net6.0;net7.0;net8.0;net9.0;net10.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Authors>Azrng</Authors>
        <Copyright>版权归Azrng所有</Copyright>
        <VersionPrefix>1.3.0</VersionPrefix>
        <Description>业务配置维护的 ASP.NET Core NuGet 包</Description>
        <PackageId>SettingConfig</PackageId>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <PackageProjectUrl>https://azrng.gitee.io/nuget-docs/</PackageProjectUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <None Remove="wwwroot\index.html"/>
        <None Remove="wwwroot\layer.js"/>
        <None Remove="wwwroot\theme\default\icon-ext.png"/>
        <None Remove="wwwroot\theme\default\icon.png"/>
        <None Remove="wwwroot\theme\default\layer.css"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="wwwroot/**/*"/>
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net6.0' ">
        <PackageReference Include="Npgsql" Version="6.0.*"/>
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net7.0' ">
        <PackageReference Include="Npgsql" Version="7.0.*"/>
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net8.0' ">
        <PackageReference Include="Npgsql" Version="8.0.*"/>
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net9.0' ">
        <PackageReference Include="Npgsql" Version="9.0.*"/>
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net10.0' ">
        <PackageReference Include="Npgsql" Version="10.0.0-rc.1"/>
    </ItemGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Dapper" Version="2.*"/>
        <PackageReference Include="Newtonsoft.Json" Version="13.*"/>
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\Azrng.Core\Azrng.Core.csproj"/>
    </ItemGroup>

</Project>
